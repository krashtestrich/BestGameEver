@model GameMvc.Models.UiActionModel

@section scripts{
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
}

@{
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}

<div>
    Available Actions:
    @if (Model != null)
    {
        <ul>
            @if (Model.Actions.Count == 0)
            {
                <li>No actions available.</li>
            }
            @foreach (var a in Model.Actions)
            {
                var displayName = a.Name + (a.PerformedWith == null ? "" : " with " + a.PerformedWith.Name);
                <li>
                    @Html.ActionLink(displayName, "PerformPlayerAction", "Game", new { actionName = a.Name }, null)
                </li>
            }
        </ul>
    }
</div>