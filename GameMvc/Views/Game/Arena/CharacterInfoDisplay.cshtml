@using GameLogic.Equipment.Shields
@using GameLogic.Equipment.Weapons
@model GameLogic.Characters.ICharacter
@{
    Layout = null;
    var weapon = @Model.CharacterEquipment.FirstOrDefault(i => i is Weapon);
    var shield = @Model.CharacterEquipment.FirstOrDefault(i => i is Shield);
}

<span class="boomText">@Model.Name</span>
<div>
    <div><span><span class="emphasiseText">Health:</span> @Model.Health</span></div>
    <div><span><span class="emphasiseText">Class:</span> @Model.SkillTree.Get().OrderByDescending(i => i.Level).First(i => i.IsActive).Name</span></div>
    <div><span><span class="emphasiseText">Mana:</span> @Model.Mana</span></div>
    <div><span><span class="emphasiseText">Weapon:</span> @(weapon == null ? "None" : weapon.Name)</span></div>
    <div><span><span class="emphasiseText">Shield:</span> @(shield == null ? "None" : shield.Name)</span></div>
</div>