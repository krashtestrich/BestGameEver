@model GameLogic.Tournament.Tournament
@{
    Layout = null;
}

<table>
    <tr>
        <td>
            Name
        </td>
        <td>
            Status
        </td>
        <td>
            Class
        </td>
    </tr>
    @foreach (var p in @Model.Participants)
    {
        <tr>
            <td>
                @p.Character.Name
            </td>
            <td>
                @p.Status.ToString()
            </td>
            <td>
                @if (p.Character.CurrentClass.HasValue)
                {
                    <span>@p.Character.CurrentClass.Value.ToString()</span>
                }
                else
                {
                    <span> - </span>
                }
            </td>
        </tr>
    }
</table>

