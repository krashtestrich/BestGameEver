@using GameLogic.Equipment
@model GameLogic.Shop.Shop
@{
    ViewBag.Title = "Shop";
    var weapons = Model.Equipment.FindAll(i => i is Weapon).ConvertAll(w => (Weapon)w);
    var shields = Model.Equipment.FindAll(i => i is Shield).ConvertAll(s => (Shield)s);
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Shop</title>
</head>
<body>
    <h2>Welcome to the Shop!</h2>
    <div>
        You have <strong>@Html.ValueFor(m => m.PlayerAtShop.Cash)</strong> to spend.
    </div>
    <div>
        <h3>Current Equipment</h3>
        <ul>
            @foreach (var e in @Model.PlayerAtShop.CharacterEquipment)
            {
                <li>
                @using (Html.BeginForm("SellEquipment", "Shop", new {@e.Name }))
                {
                     <button type="submit">Sell</button><span> @e.Name </span>
                }
                </li> 
            }
            @if (@Model.PlayerAtShop.CharacterEquipment.Count == 0)
            {
                <li>None</li> 
            }
        </ul>
    </div>
    <div><h3>Weapons</h3>
        <table>
            <tr>
                <td>Weapon Name</td>
                <td>Weapon Cost</td>
                <td>Base Damage</td>
                <td>Bonus Damage</td>
                <td>Buy</td>
            </tr>
            @foreach (var i in weapons)
            {
                <tr>
                    <td>@i.Name</td>
                    <td>@i.Price</td>
                    <td>@i.BaseDamage</td>
                    <td>@i.BonusDamage</td>
                    <td>
                        @using (Html.BeginForm("PurchaseEquipment", "Shop", new {@i.Name }))
                        {
                            if (@Model.PlayerAtShop.CanAffordEquipment(i) && @Model.PlayerAtShop.CanEquipEquipment(i))
                            {
                                <button type='submit'>Buy</button>
                            }
                            else
                            {
                                <span>Need more $$</span>
                            }                  
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div>
        <h3>Shields</h3>
        <table>
            <tr>
                <td>Shield Name</td>
                <td>Shield Cost</td>
                <td>Base Block %</td>
                <td>Bonus Block %</td>
                <td>Buy</td>
            </tr>
            @foreach (var s in shields)
            {
                <tr>
                    <td>@s.Name</td>
                    <td>@s.Price</td>
                    <td>@s.BaseBlock</td>
                    <td>@s.BonusBlock</td>
                    <td>
                        @using (Html.BeginForm("PurchaseEquipment", "Shop", new { @s.Name }))
                        {
                            if (@Model.PlayerAtShop.CanAffordEquipment(s) && @Model.PlayerAtShop.CanEquipEquipment(s))
                            {
                                <button type='submit'>Buy</button>
                            }
                            else
                            {
                                <span>Need more $$</span>
                            }
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
